<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class table="customer" name="com.onlinestore.entity.Customer">
        <id name="id" type="java.lang.Integer" column="p_id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="phone"/>
        <property name="pwd"/>
        <property name="email"/>
        <property name="reg_date"/>
        <set name="addresses" cascade="all" lazy="true">
            <key column="p_id"></key>
            <one-to-many class="com.onlinestore.entity.Address"/>
        </set>
        <set name="orders">
            <key column="p_id"></key>
            <one-to-many class="com.onlinestore.entity.COrder" />
        </set>
    </class>
</hibernate-mapping>